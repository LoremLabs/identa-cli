{
  "version": 2,
  "public": true,
  "cleanUrls": false,
  "trailingSlash": false,

  "builds": [{ "src": "public/**", "use": "@vercel/static" }],

  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],

  "redirects": [
    {
      "source": "/.*",
      "has": [{ "type": "missing", "key": "file" }],
      "destination": "https://www.ident.agency/?utm_source=get.identa-cli&utm_medium=redirect",
      "statusCode": 302
    }
  ],

  "headers": [
    {
      "source": "/install.sh",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=120, s-maxage=120"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'none'; frame-ancestors 'none'; sandbox"
        },
        {
          "key": "Referrer-Policy",
          "value": "no-referrer"
        }
      ]
    }
  ]
}
